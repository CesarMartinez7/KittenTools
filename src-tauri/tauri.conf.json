{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Elisa",
  "version": "0.1.0",
  "identifier": "com.cesar.elisa",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Elisa",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/coffe-32x32.png",
      "icons/coffe-128x128.png",
      "icons/coffe-128x128.png",
      "icons/icon.icns",
      "icons/coffe.ico"
    ]
  },
  "plugins": {
    "fs": {
      "all": false,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "exists": true,
      "scope": ["$APPCONFIG/**"]
    },
    "dialog": {
      "all": true
    }
  }
}
